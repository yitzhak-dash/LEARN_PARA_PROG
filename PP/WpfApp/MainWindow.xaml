<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Transparent">
    <Window.Resources>
        <Style TargetType="Control">
            <Setter Property="Foreground" Value="LightSlateGray"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="LightSlateGray"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightSlateGray"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <TextBlock x:Name="txtBlock" DockPanel.Dock="Top" Height="25"></TextBlock>
            <TextBox x:Name="TextBox" DockPanel.Dock="Top" Height="25"></TextBox>
            <Button Width="100" Height="25" DockPanel.Dock="Left" Click="Button_Click">click</Button>
        </DockPanel>
    </Grid>
</Window>
