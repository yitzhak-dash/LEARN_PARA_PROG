<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <TextBlock x:Name="txtBlock" DockPanel.Dock="Top" Height="25"></TextBlock>
            <TextBox DockPanel.Dock="Top" Height="25"></TextBox>
            <Button Width="100" Height="25" DockPanel.Dock="Left" Click="Button_Click">click</Button>
        </DockPanel>
    </Grid>
</Window>
